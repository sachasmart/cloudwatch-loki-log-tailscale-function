# TAILSCALE CONFIGURATION
TAILSCALE_AUTH_KEY=<visit your Tailscale dashboard>

# LOKI CONFIGURATION
LOKI_ENDPOINT=https://your-loki-endpoint.example.com

# Comma-separated list of labels for logs (e.g., "service,level,region")
LOG_LABELS=service,level

# Log message template
LOG_TEMPLATE=$message

# Comma-separated list of template variables (e.g., "message,timestamp")
LOG_TEMPLATE_VARIABLES=message

# Set to "true", "1", or "yes" to ignore non-JSON logs
LOG_IGNORE_NON_JSON=false
